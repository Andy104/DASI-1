package application;
	



import javafx.application.Application;
import javafx.stage.Stage;

import javafx.scene.Scene;
import javafx.scene.layout.BorderPane;
import javafx.scene.layout.GridPane;
import javafx.scene.layout.Pane;
import javafx.application.Application;
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.geometry.Insets;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.layout.StackPane;
import javafx.scene.layout.VBox;


public class Main extends Application {
	Stage window ;
	Scene scene1, scene2;
	@Override
	public void start(Stage primaryStage) throws Exception {
		try {
			
			
			//resolution of stage
			primaryStage.setMinHeight(600);
			primaryStage.setMinWidth(1024);
			primaryStage.setMaxHeight(600);
			primaryStage.setMaxWidth(1024);
			//
			//Grid of home screen
			GridPane grid = new GridPane();
			grid.setPadding(new Insets(10, 10, 10, 10));
			grid.setVgap(8);
			grid.setHgap(8);
			//
			
			//Description of app
			Label Description = new Label("Sistemas de vueles es\n una applicacion para comprar boletas"); // text 
	        GridPane.setConstraints(Description, 10, 10);
			//
			
			//Login Button
			Button loginButton = new Button("Log In");
		    GridPane.setConstraints(loginButton, 90, 0);
		    //
		    
		    //Sign up Button
		    Button InscriptionButton = new Button("Sign up");
		    GridPane.setConstraints(InscriptionButton, 85, 0);
		    //
		    
		    //Add Buttons and names to grid
		    grid.getChildren().addAll(loginButton, InscriptionButton,Description);
		    //
		    
		    //Scene Properieties
		    Scene scene1 = new Scene(grid,1024,600);
		    primaryStage.setScene(scene1);
		    primaryStage.setTitle("Sistema de vuelos"); // Name of App
		    primaryStage.show();
		    //
		    
		} catch(Exception e) {
			e.printStackTrace();
		}
	}
	
	public static void main(String[] args) {
		launch(args);
	}


	
	
}
