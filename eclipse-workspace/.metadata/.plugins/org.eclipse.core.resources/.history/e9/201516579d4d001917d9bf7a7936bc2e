package application;
	



import javafx.application.Application;
import javafx.stage.Stage;
import javafx.scene.Scene;
import javafx.scene.layout.BorderPane;
import javafx.scene.layout.Pane;
import javafx.application.Application;
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.layout.StackPane;
import javafx.scene.layout.VBox;


public class Main extends Application {
	Stage window ;
	Scene scene1, scene2;
	@Override
	public void start(Stage primaryStage) throws Exception {
		try {
			
			Pane  root = new Pane();
			//StackPane layout = new StackPane();
			//Scene scene = new Scene(layout,800,480);
			//scene.getStylesheets().add(getClass().getResource("application.css").toExternalForm());
			Label label1 = new Label("Welcome");
			Button button1 = new Button ("go to scene 2");
			button1.setOnAction(e -> primaryStage.setScene(scene2));
			//Layout = children are laid out in vertical column
			//VBox layout1 = new VBox(20);
			//layout1.getChildren().addAll(label1, button1);
			//BorderPane.setAlignment(button1, Pos.CENTER);
			//root.setAlignment(label1, Pos.TOP_LEFT);
			button1.setLayoutX(30);
			button1.setLayoutY(30);
			root.getChildren().add(button1);
		
			
			scene1 = new Scene(root, 800, 400);
			//Button 2 
			Button button2 = new Button ("welcome to scene 2");
			button2.setOnAction(e -> primaryStage.setScene(scene1));
			
			//Layout 2
			StackPane layout2 = new StackPane();
			layout2.getChildren().add(button2);
			scene2 = new Scene (layout2,600,300);
			primaryStage.setScene(scene1);
			primaryStage.setTitle("Sistema de vuelos"); // Name of App
			primaryStage.show();
		} catch(Exception e) {
			e.printStackTrace();
		}
	}
	
	public static void main(String[] args) {
		launch(args);
	}


	
	
}
